{
  "compilerOptions": {
    "outDir": "docs",
    "target": "es5",
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts","**/__mocks__"]
}
